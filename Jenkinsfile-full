pipeline {
    agent any
    tools {
        jdk 'Java-17'
        maven 'Maven-3'
    }
    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/Wakekar/Train-Ticket-Reservation-System.git', branch: 'main'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('Docker Build') {
            steps {
                script {
                    docker.build('train-ticket-app:latest')
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                sh 'kubectl apply -f train-ticket-app.yaml'
            }
        }
    }
}
